@using System.Web.UI.HtmlControls
@model MorningJoeReadsWebUI.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@Styles.Render("~/Content/LandingPage.css")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device.width" />
</head>
<body>
    <h2>Please enter your Information</h2>   
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Login</th>
            </tr>
            <tr>
                <td style="color:antiquewhite">First Name:</td>
                <td>
                    @Html.TextBoxFor(m => m.FirstName)
                </td>
            </tr>
            <tr>
                <td style="color:antiquewhite">Last Name:</td>
                <td>
                    @Html.TextBoxFor(m => m.LastName)
                </td>
            </tr>
            <tr>
                <td style="color:antiquewhite">Email Address:</td>
                <td>
                    @Html.TextBoxFor(m => m.EmailAddress)
                </td>
            </tr>
            <tr>
                <td style="color:antiquewhite">Password:</td>
                <td>
                    @Html.TextBoxFor(m => m.PassWord)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>




