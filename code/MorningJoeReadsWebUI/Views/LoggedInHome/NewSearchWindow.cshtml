@model MorningJoeReadsWebUI.ViewModel.NewSearchViewModel
@{
    ViewBag.Title = "NewSearchWindow";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}
@Styles.Render("~/Content/LandingPage.css")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device.width" />
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script>
        $(function () { });       
        $(function () {
            $("#AddSearchForm").click($("h2").after("<button>Hello</button>"))
            });      
            //after and outside of form, insert button on click of form submit 
        
    </script>
</head>
<body>
    <h2>Enter Search Information</h2>
    @using (Html.BeginForm("NewSearchWindow", "LoggedInHome", FormMethod.Post))
    {
        <table id="AddSearchForm" cellpadding="10" cellspacing="10" align="center">
            <tr>
                <th colspan="2" align="center">Login</th>
            </tr>
            <tr>
                <td style="color:antiquewhite">Title of Tag:</td>
                <td>
                    @Html.TextBoxFor(m => m.SearchName)
                </td>
            </tr>
            <tr>
                <td style="color:antiquewhite">Enter Your Search:</td>
                <td>
                    @Html.TextBoxFor(m => m.SearchDescription)
                </td>
            </tr>
            <tr>
                <td></td>                               
                <td><input type="submit" value="Submit"/></td>                
            </tr>
        </table>    
    }     
</body>
</html>

