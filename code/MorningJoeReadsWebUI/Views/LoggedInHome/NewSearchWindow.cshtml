@model MorningJoeReadsWebUI.ViewModel.NewSearchViewModel
@{
    ViewBag.Title = "NewSearchWindow";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}
@Styles.Render("~/Content/LandingPage.css")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device.width" />
    <style>
        tbody{
            background-color:black;
        }
    </style>
</head>
<body>
    <h2>Enter Search Information</h2>
    @using (Html.BeginForm("UpdateSearchData", "LoggedInHome", FormMethod.Post))
    {
    <table id="AddSearchForm" cellpadding="10" cellspacing="10" align="center">
        <tr>
            <th colspan="2" align="center">Login</th>
        </tr>
        <tr>
            <td style="color:antiquewhite">Title of Tag:</td>
            <td>
                @Html.LabelFor(m => m.SearchName)
            </td>
            <td>
                @Html.EditorFor(m => m.SearchName)
            </td>
        <tr>
            <td></td>
            <td style="color:red">@Html.ValidationMessageFor(m => m.SearchName)</td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Enter Your Search:</td>
            <td>
                @Html.LabelFor(m => m.SearchDescription)
            </td>
            <td>
                @Html.EditorFor(m => m.SearchName)
            </td>
        <tr>
            <td></td>
            <td style="color:red">@Html.ValidationMessageFor(m => m.SearchDescription)</td>
        </tr>
        <tr>
            <td colspan="2">
                <label class="field-validation-error" style="color:red">
                    @Html.DisplayFor(m => m.SearchErrorMessage)
                </label>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>    
    }     
</body>
</html>

